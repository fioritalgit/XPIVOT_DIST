<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:fio="it.fiorital.fioritalui5lib.controls"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:grid="sap.ui.layout.cssgrid">
	<Dialog title="Short-cut manager" id="SKMdialog" contentWidth="30em" verticalScrolling="false">
		<html:style>
			.boldShortCut {font-weight: bold !important; } 				
		</html:style>
		<List items="{SKM>/}" id="SKMdialogList">
			<CustomListItem>
				<HBox height="2em" width="100%">
					<VBox width="30%" justifyContent="Center">
						<Text text="{SKM>keys}" class="sapUiSmallMarginBegin boldShortCut"></Text>
					</VBox>
					<VBox width="70%" justifyContent="Center">
						<Label text="{SKM>description}"></Label>
					</VBox>
				</HBox>
			</CustomListItem>
		</List>
	</Dialog>
</core:FragmentDefinition>